<div class="jumbotron">
  <h1 class="display-4">Bem vindo ao Blog do Node</h1>
  <p class="lead">Blog desenvolvido com Node.js + Express + MongoDB.</p>
  <hr class="my-4">
  <p>Novidade a cada postagem</p>
  <a class="btn btn-primary btn-lg" href="#" role="button">Crie uma conta</a>
</div>

<hr>


<h2>Postagens recentes:</h2>

{{#each postagens}}

<div class="card mt-4">
    <div class="card-body">

        <h3>{{titulo}}</h3>
        <p>{{descricao}}</p>
        <a href="/postagem/{{slug}}" class="btn btn-success">Leia mais</a> 
        <hr>
        <small>Categoria: {{categoria.nome}}</small><br>
        <small>Data de publicação: {{data}}</small>
    </div>
</div>

{{else}}
    <h5>Nenhuma postagem encontrada</h5>
{{/each}}