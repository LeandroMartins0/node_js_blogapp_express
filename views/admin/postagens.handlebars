<h2>Lista de Postagens: </h2>
<hr>

<a href="/admin/postagens/add"><button class="btn btn-outline-success mb-3">Nova Postagem</button></a>

{{#each postagens}}
    <div class="card px-3">
        <div class="card-body">
            <div class="row">
                <h4>Título:</h4>
                <h4 class=" ml-2">{{titulo}}</h4>
            </div>
            <div class="row">
                <h6>Descrição:</h6>
                <h6 class=" ml-2">{{descricao}}</h6>
            </div>
            <div class="row">
                <h6>Categoria:</h6>
                <h6 class="ml-2">{{categoria.nome}}</h6>
            </div>
            <div class="row">
                <h6>Data:</h6>
                <h6 class="ml-2">{{data}}</h6><br>
            </div>
        </div> 
    <div>
        <div>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-1">Editar postagem</button></a>
            <form action="/admin/postagens/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-1">Deletar postagem</button>
            </form>
        </div>
    </div>
    </div>
 

{{else}}
    <h5>Nenhuma postagem registrada...</h5>
{{/each}}